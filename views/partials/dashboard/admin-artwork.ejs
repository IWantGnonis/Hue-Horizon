<div class="ml-64 p-8">
    <h1 class="text-3xl font-bold mb-6">Moderate Artwork</h1>
    
    <div class="bg-white dark:bg-black rounded-lg shadow-lg p-6 border border-black dark:border-white">
        <div id="loading" class="hidden text-center py-4">
            <i class="fas fa-spinner fa-spin text-2xl"></i>
            <p>Loading artwork...</p>
        </div>
        
        <div id="error" class="hidden bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200 p-4 rounded mb-4"></div>
        
        <div class="overflow-x-auto">
            <table id="artwork-table" class="w-full">
                <thead>
                    <tr class="border-b border-black dark:border-white">
                        <th class="p-4 text-left">Artwork</th>
                        <th class="p-4 text-left">Artist</th>
                        <th class="p-4 text-left">Status</th>
                        <th class="p-4 text-left">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Artwork will be loaded here dynamically -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="/js/admin/artwork.js"></script>
