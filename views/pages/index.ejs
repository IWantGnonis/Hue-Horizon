            // const section2 = document.querySelector('.section2 img'); // Assuming this might not exist
            if (!section1) return; // Exit if section1 not found

            const animationEndScroll = window.innerHeight; // Animate over the first viewport height

            // Scroll event listener for animation
            window.addEventListener('scroll', () => {
                const scrollY = window.scrollY;
                // const scrollMax = document.body.scrollHeight - window.innerHeight; // Not needed for section1 fade
                // const scrollRatio = scrollY / scrollMax; // Not needed for section1 fade
                
                // Calculate progress of scrolling through the first viewport height
                const progress = Math.min(1, Math.max(0, scrollY / animationEndScroll));

                // Rotate the image based on scroll position (Keep commented if elements don't exist)
                // const rotation = progress * 180; 
                // const scale = 1 + (progress * 0.5);
                // imageContainer.style.transform = `rotateY(${rotation}deg) scale(${scale})`;
                 
                // Fade out section1 based on progress
                section1.style.opacity = 1 - progress;

                // Add scale or other transforms if desired, driven by progress
                const scaleTransform = 1 - (progress * 0.2); // Example: scale down from 1 to 0.8
                section1.style.transform = `scale(${scaleTransform})`; // Apply only scale for now

                // Parallax effect for section2 (Keep commented if element doesn't exist)
                // section2.style.transform = `translateY(${-100 * progress}px)`; // Drive parallax by progress too

                // Hide section1 completely when its animation is done
                if (progress >= 1) {
                    section1.style.pointerEvents = 'none'; 
                    section1.style.visibility = 'hidden';
                } else {
                    section1.style.pointerEvents = 'auto';
                    section1.style.visibility = 'visible';
                }
            });
        }); 








const btns = document.querySelectorAll(".btn");

btns.forEach(btn => {
  btn.onmousemove = function (e) {
    const rect = btn.getBoundingClientRect(); // Get button's position and size
    let x = e.clientX - rect.left; // Mouse X relative to button's left edge
    let y = e.clientY - rect.top;  // Mouse Y relative to button's top edge
    btn.style.setProperty("--x", x + "px");
    btn.style.setProperty("--y", y + "px");
  };
});







document.addEventListener("DOMContentLoaded", function () {
    const toggleButton = document.querySelector(".burger");
    let isOpen = false;

    gsap.set(".menu-item p", { y: 225 });

    const timeline = gsap.timeline({ paused: true });

    timeline.to(".overlay", {
      duration: 1.5,
      clipPath: "polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%)",
      ease: "power4.out",
    });

    timeline.to(".menu-item p", {
      duration: 1.5,
      y: 0,
      stagger: 0.2,
      ease: "power4.out",
    }, "-=1");

    // Find the header element
    const header = document.querySelector(".header"); 

    toggleButton.addEventListener("click", function () {
      this.classList.toggle("active");
      header.classList.toggle("menu-open"); // Toggle class on header
      if (isOpen) {
        timeline.timeScale(2).reverse(); // Reverse animation faster (e.g., 2x speed)
      } else {
        timeline.timeScale(1).play(); // Play forward at normal speed
      }
      isOpen = !isOpen;
    });
});


