<!-- My Artworks Section -->
<section id="artworks" class="section hidden">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h2 class="text-3xl font-bold">My Artworks</h2>
            <p class="text-gray-600 dark:text-gray-400">Manage your artwork collection</p>
        </div>
        <div class="flex items-center gap-4">
            <!-- Artist Avatar -->
            <div class="relative group">
                <img id="artistAvatar" src="" alt="Artist Avatar"
                     class="w-10 h-10 rounded-full object-cover border-2 border-black dark:border-white"
                     onclick="document.getElementById('avatarUploadModal').classList.remove('hidden')" loading="eager">
                <div class="absolute inset-0 rounded-full bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                    <label class="cursor-pointer">
                        <i class="fas fa-camera text-white text-sm"></i>
                        <input type="file" id="artworkAvatarInput" name="avatar" accept="image/*" class="hidden">
                    </label>
                </div>
            </div>
            <!-- Refresh Button -->
            <button id="refreshArtworks" class="text-sm px-4 py-2 rounded-lg bg-[#1a1a1a] text-white hover:bg-[#2a2a2a] transition-all">
                <i class="fas fa-sync-alt mr-2"></i>Refresh
            </button>
            <button data-section="categories" class="text-sm px-4 py-2 rounded-lg bg-[#1a1a1a] text-white hover:bg-[#2a2a2a] transition-all">
                <i class="fas fa-tags mr-2"></i>Categories
            </button>
            <button id="openAvatarModalBtn" class="text-sm px-4 py-2 rounded-lg bg-[#1a1a1a] text-white hover:bg-[#2a2a2a] transition-all">
                <i class="fas fa-user-edit mr-2"></i>Change Avatar
            </button>
        </div>
    </div>
    <div class="columns-1 gap-4 sm:columns-2 lg:columns-3" id="artworksGrid">
        <!-- Artworks will be loaded dynamically -->
    </div>

    <%- include('artwork-modal') %>

    <!-- Avatar Upload Modal -->
    <div id="avatarUploadModal" class="fixed inset-0 bg-black/70 flex items-center justify-center z-50 hidden">
        <div class="bg-white dark:bg-gray-900 rounded-xl p-6 max-w-md w-full">
            <h3 class="text-xl font-bold mb-4">Update Profile Picture</h3>
            <div class="flex flex-col items-center mb-6">
                <div class="relative group mb-4">
                    <img id="avatarModalPreview" src="/images/default-avatar.png" alt="Profile Picture"
                        class="w-32 h-32 rounded-full object-cover border-4 border-black dark:border-white"
                        loading="lazy">
                    <div id="avatarDropzone" class="absolute inset-0 rounded-full bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                        <label for="avatarModalInput" class="cursor-pointer p-3 bg-white/20 rounded-full hover:bg-white/30 transition-all">
                            <i class="fas fa-camera text-white text-2xl"></i>
                            <input type="file" id="avatarModalInput" name="avatar" accept="image/*" class="hidden">
                        </label>
                    </div>
                    <div id="avatarDropOverlay" class="absolute inset-0 rounded-full bg-blue-500/70 hidden flex items-center justify-center">
                        <i class="fas fa-cloud-upload-alt text-white text-3xl"></i>
                    </div>
                </div>
                <p class="text-sm text-gray-500 dark:text-gray-400">Click or drag & drop to change profile picture</p>
                <div id="avatarUploadStatus" class="text-xs text-blue-500 hidden mt-2">
                    <i class="fas fa-spinner fa-spin mr-1"></i> Preparing image...
                </div>
            </div>
            <div class="flex justify-end gap-3">
                <button id="cancelAvatarUpload" class="px-4 py-2 rounded-lg bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">
                    Cancel
                </button>
                <button id="saveAvatar" class="px-4 py-2 rounded-lg bg-gradient-to-r from-blue-500 to-purple-500 text-white hover:opacity-90 transition-opacity">
                    Save Changes
                </button>
            </div>
        </div>
    </div>
</section>
