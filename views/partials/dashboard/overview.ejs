<!-- Overview Section -->
<section id="overview" class="section">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h2 class="text-3xl font-bold">Overview</h2>
            <p class="text-gray-600 dark:text-gray-400">Welcome back, <span id="userFullName">Loading...</span></p>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Total Artworks -->
        <div class="dashboard-card rounded-xl p-6 border border-black dark:border-white">
            <div class="flex items-center justify-between">
                <div class="w-12 h-12 rounded-full bg-blue-500/10 flex items-center justify-center">
                    <i class="fas fa-palette text-2xl text-blue-500"></i>
                </div>
                <span class="text-sm font-medium px-3 py-1 rounded-full bg-blue-500/10 text-blue-500">
                    <i class="fas fa-arrow-up mr-1"></i>12%
                </span>
            </div>
            <div class="mt-4">
                <h3 class="text-3xl font-bold" id="totalArtworks">0</h3>
                <p class="text-gray-600 dark:text-gray-400 text-sm mt-1">Total Artworks</p>
            </div>
        </div>

        <!-- Total Views -->
        <div class="dashboard-card rounded-xl p-6 border border-black dark:border-white">
            <div class="flex items-center justify-between">
                <div class="w-12 h-12 rounded-full bg-green-500/10 flex items-center justify-center">
                    <i class="fas fa-eye text-2xl text-green-500"></i>
                </div>
                <span class="text-sm font-medium px-3 py-1 rounded-full bg-green-500/10 text-green-500">
                    <i class="fas fa-arrow-up mr-1"></i>24%
                </span>
            </div>
            <div class="mt-4">
                <h3 class="text-3xl font-bold" id="totalViews">0</h3>
                <p class="text-gray-600 dark:text-gray-400 text-sm mt-1">Total Views</p>
            </div>
        </div>

        <!-- Total Favorites -->
        <div class="dashboard-card rounded-xl p-6 border border-black dark:border-white">
            <div class="flex items-center justify-between">
                <div class="w-12 h-12 rounded-full bg-red-500/10 flex items-center justify-center">
                    <i class="fas fa-heart text-2xl text-red-500"></i>
                </div>
                <span class="text-sm font-medium px-3 py-1 rounded-full bg-red-500/10 text-red-500">
                    <i class="fas fa-arrow-up mr-1"></i>18%
                </span>
            </div>
            <div class="mt-4">
                <h3 class="text-3xl font-bold" id="totalFavorites">0</h3>
                <p class="text-gray-600 dark:text-gray-400 text-sm mt-1">Total Favorites</p>
            </div>
        </div>

        <!-- Total Earnings -->
        <div class="dashboard-card rounded-xl p-6 border border-black dark:border-white">
            <div class="flex items-center justify-between">
                <div class="w-12 h-12 rounded-full bg-purple-500/10 flex items-center justify-center">
                    <i class="fas fa-dollar-sign text-2xl text-purple-500"></i>
                </div>
                <span class="text-sm font-medium px-3 py-1 rounded-full bg-purple-500/10 text-purple-500">
                    <i class="fas fa-arrow-up mr-1"></i>32%
                </span>
            </div>
            <div class="mt-4">
                <h3 class="text-3xl font-bold" id="totalEarnings">$0.00</h3>
                <p class="text-gray-600 dark:text-gray-400 text-sm mt-1">Total Earnings</p>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Views Chart -->
        <div class="dashboard-card rounded-xl p-6 border border-black dark:border-white">
            <h3 class="text-xl font-bold mb-6 flex items-center gap-2">
                <i class="fas fa-chart-line text-2xl"></i>
                Views Over Time
            </h3>
            <canvas id="viewsChart" class="w-full"></canvas>
        </div>

        <!-- Favorites Chart -->
        <div class="dashboard-card rounded-xl p-6 border border-black dark:border-white">
            <h3 class="text-xl font-bold mb-6 flex items-center gap-2">
                <i class="fas fa-chart-line text-2xl"></i>
                Favorites Over Time
            </h3>
            <canvas id="favoritesChart" class="w-full"></canvas>
        </div>
    </div>

    <!-- Category Distribution -->
    <div class="mt-8">
        <div class="dashboard-card rounded-xl p-6 border border-black dark:border-white">
            <h3 class="text-xl font-bold mb-6 flex items-center gap-2">
                <i class="fas fa-chart-pie text-2xl"></i>
                Category Distribution
            </h3>
            <canvas id="categoryChart" class="w-full max-h-[300px]"></canvas>
        </div>
    </div>
</section> 