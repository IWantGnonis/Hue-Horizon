<!-- Upload Section -->
<section id="upload" class="section hidden">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h2 class="text-3xl font-bold">Upload Artwork</h2>
            <p class="text-gray-600 dark:text-gray-400">Share your creativity with the world</p>
        </div>
    </div>

    <!-- Upload Steps -->
    <div class="flex items-center justify-between mb-8 relative">
        <div class="absolute left-0 right-0 top-1/2 h-1 bg-gray-200 dark:bg-gray-700 -z-10"></div>
        <div class="flex-1 text-center">
            <div class="w-8 h-8 bg-black dark:bg-white text-white dark:text-black rounded-full flex items-center justify-center mx-auto mb-2">1</div>
            <p class="text-sm font-medium">Details</p>
        </div>
        <div class="flex-1 text-center">
            <div class="w-8 h-8 bg-gray-200 dark:bg-gray-700 text-gray-600 dark:text-gray-400 rounded-full flex items-center justify-center mx-auto mb-2">2</div>
            <p class="text-sm font-medium">Upload</p>
        </div>
        <div class="flex-1 text-center">
            <div class="w-8 h-8 bg-gray-200 dark:bg-gray-700 text-gray-600 dark:text-gray-400 rounded-full flex items-center justify-center mx-auto mb-2">3</div>
            <p class="text-sm font-medium">Preview</p>
        </div>
    </div>

    <!-- Upload Form -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Left Column: Form -->
        <div class="dashboard-card rounded-xl p-6 border border-black dark:border-white">
            <h3 class="text-xl font-bold mb-6 flex items-center gap-2">
                <i class="fas fa-paint-brush text-2xl"></i>
                Artwork Details
            </h3>
            <form id="uploadForm" class="space-y-6" enctype="multipart/form-data">
                <div class="space-y-2">
                    <label class="block text-sm font-medium">Artwork Title</label>
                    <input type="text" name="title" required
                        placeholder="Give your artwork a catchy title"
                        class="w-full p-3 rounded-lg border-2 border-black dark:border-white bg-transparent focus:ring-2 focus:ring-blue-500 transition-all">
                </div>
                
                <div class="space-y-2">
                    <label class="block text-sm font-medium">Description</label>
                    <textarea name="description" rows="4" required
                        placeholder="Tell the story behind your artwork..."
                        class="w-full p-3 rounded-lg border-2 border-black dark:border-white bg-transparent focus:ring-2 focus:ring-blue-500 transition-all"></textarea>
                </div>

                <div class="space-y-2">
                    <label class="block text-sm font-medium">Category</label>
                    <div class="relative">
                        <select name="category" required
                            class="w-full p-3 rounded-lg border-2 border-black dark:border-white bg-transparent focus:ring-2 focus:ring-blue-500 transition-all appearance-none">
                            <option value="">Select a category</option>
                            <option value="Fresco">Fresco</option>
                            <option value="Tempera">Tempera</option>
                            <option value="Oil Painting">Oil Painting</option>
                            <option value="Baroque">Baroque</option>
                            <option value="Rococo">Rococo</option>
                            <option value="Neoclassicism">Neoclassicism</option>
                            <option value="Romanticism">Romanticism</option>
                            <option value="Realism">Realism</option>
                            <option value="Academic Art">Academic Art</option>
                        </select>
                        <i class="fas fa-chevron-down absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none"></i>
                    </div>
                </div>

                <div class="space-y-2">
                    <label class="block text-sm font-medium">Tags</label>
                    <div class="relative">
                        <i class="fas fa-tags absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                        <input type="text" name="tags" 
                            placeholder="art, modern, abstract (comma-separated)"
                            class="w-full p-3 pl-10 rounded-lg border-2 border-black dark:border-white bg-transparent focus:ring-2 focus:ring-blue-500 transition-all">
                    </div>
                    <p class="text-xs text-gray-500">Add relevant tags to help others discover your artwork</p>
                </div>

                <!-- Add Price Option -->
                <div class="space-y-4 pt-4 border-t-2 border-black/10 dark:border-white/10">
                    <div class="flex items-center justify-between">
                        <div>
                            <label class="block text-sm font-medium">Sell this artwork</label>
                            <p class="text-xs text-gray-500 mt-1">Enable to list in marketplace</p>
                        </div>
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input type="checkbox" id="sellArtwork" name="isForSale" class="sr-only peer">
                            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-500"></div>
                        </label>
                    </div>

                    <div id="priceField" class="hidden space-y-2">
                        <div class="relative">
                            <i class="fas fa-dollar-sign absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                            <input type="number" 
                                id="priceInput"
                                name="price" 
                                min="0.99" 
                                step="0.01"
                                placeholder="Enter price (minimum $0.99)"
                                class="w-full p-3 pl-10 rounded-lg border-2 border-black dark:border-white bg-transparent focus:ring-2 focus:ring-blue-500 transition-all">
                            <div class="absolute right-3 top-1/2 -translate-y-1/2">
                                <span class="text-sm text-gray-500">USD</span>
                            </div>
                        </div>
                        <div id="priceError" class="hidden text-sm text-red-500">
                            <i class="fas fa-exclamation-circle mr-1"></i>
                            <span>Price must be at least $0.99</span>
                        </div>
                        <div class="p-4 bg-yellow-500/10 border border-yellow-500/20 rounded-lg">
                            <p class="text-sm text-yellow-600 dark:text-yellow-400">
                                <i class="fas fa-info-circle mr-2"></i>
                                <strong>Note:</strong> Adding a price will:
                            </p>
                            <ul class="mt-2 text-sm text-yellow-600 dark:text-yellow-400 list-disc list-inside">
                                <li>List your artwork in the marketplace</li>
                                <li>Reduce visibility in general galleries</li>
                                <li>Focus on reaching potential buyers</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Auction Options -->
                <div class="space-y-4 pt-4 border-t-2 border-black/10 dark:border-white/10">
                    <div class="flex items-center justify-between">
                        <div>
                            <label class="block text-sm font-medium">List for Auction</label>
                            <p class="text-xs text-gray-500 mt-1">Enable to list for auction</p>
                        </div>
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input type="checkbox" id="listForAuction" name="isForAuction" class="sr-only peer">
                            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-500"></div>
                        </label>
                    </div>

                    <div id="auctionFields" class="hidden space-y-2">
                        <div class="space-y-2">
                            <label class="block text-sm font-medium">Starting Bid</label>
                            <div class="relative">
                                <i class="fas fa-dollar-sign absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                                <input type="number" 
                                    id="startingBidInput"
                                    name="startingBid" 
                                    min="0.01" 
                                    step="0.01"
                                    placeholder="Enter starting bid (minimum $0.01)"
                                    class="w-full p-3 pl-10 rounded-lg border-2 border-black dark:border-white bg-transparent focus:ring-2 focus:ring-blue-500 transition-all">
                            </div>
                        </div>

                        <div class="space-y-2">
                            <label class="block text-sm font-medium">Auction Duration</label>
                            <div class="relative">
                                <i class="fas fa-clock absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                                <select name="auctionDuration"
                                    class="w-full p-3 pl-10 rounded-lg border-2 border-black dark:border-white bg-transparent focus:ring-2 focus:ring-blue-500 transition-all appearance-none">
                                    <option value="">Select duration</option>
                                    <option value="1">1 day</option>
                                    <option value="3">3 days</option>
                                    <option value="7">7 days</option>
                                    <option value="14">14 days</option>
                                    <option value="30">30 days</option>
                                </select>
                                <i class="fas fa-chevron-down absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none"></i>
                            </div>
                        </div>

                        <div class="space-y-2">
                            <label class="block text-sm font-medium">Buy Now Price (Optional)</label>
                            <div class="relative">
                                <i class="fas fa-dollar-sign absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                                <input type="number" 
                                    id="buyNowPriceInput"
                                    name="buyNowPrice" 
                                    min="0.01" 
                                    step="0.01"
                                    placeholder="Enter Buy Now price"
                                    class="w-full p-3 pl-10 rounded-lg border-2 border-black dark:border-white bg-transparent focus:ring-2 focus:ring-blue-500 transition-all">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Right Column: Upload and Preview -->
        <div class="space-y-6">
            <div class="dashboard-card rounded-xl p-6 border border-black dark:border-white">
                <h3 class="text-xl font-bold mb-6 flex items-center gap-2">
                    <i class="fas fa-cloud-upload-alt text-2xl"></i>
                    Upload Image
                </h3>
                <div class="upload-area">
                    <label class="relative block group cursor-pointer">
                        <input type="file" name="artwork" accept="image/*" class="hidden" form="uploadForm" required>
                        <div class="aspect-video rounded-lg border-2 border-dashed border-black dark:border-white p-8 transition-all group-hover:border-blue-500 group-hover:bg-blue-500/5">
                            <div class="h-full flex flex-col items-center justify-center text-center space-y-4">
                                <div class="w-16 h-16 rounded-full bg-black/5 dark:bg-white/5 flex items-center justify-center">
                                    <i class="fas fa-cloud-upload-alt text-3xl group-hover:text-blue-500 transition-colors"></i>
                                </div>
                                <div>
                                    <p class="text-sm font-medium group-hover:text-blue-500 transition-colors">Drag and drop your image here</p>
                                    <p class="text-xs text-gray-500 mt-1">PNG, JPG, GIF up to 10MB</p>
                                </div>
                                <button type="button" class="px-4 py-2 rounded-lg bg-black dark:bg-white text-white dark:text-black text-sm font-medium hover:opacity-90 transition-opacity">
                                    Browse Files
                                </button>
                            </div>
                        </div>
                    </label>
                </div>
            </div>

            <!-- Preview Card -->
            <div id="imagePreview" class="dashboard-card rounded-xl p-6 border border-black dark:border-white hidden">
                <h3 class="text-xl font-bold mb-6 flex items-center gap-2">
                    <i class="fas fa-eye text-2xl"></i>
                    Preview
                </h3>
                <div class="relative group">
                    <img src="" alt="Preview" class="w-full rounded-lg">
                    <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex items-center justify-center">
                        <button type="button" class="px-4 py-2 rounded-lg bg-white text-black text-sm font-medium hover:bg-gray-100 transition-colors">
                            Change Image
                        </button>
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" form="uploadForm"
                class="w-full p-4 rounded-lg bg-gradient-to-r from-blue-500 to-purple-500 text-white font-medium hover:opacity-90 transition-opacity flex items-center justify-center gap-2">
                <i class="fas fa-cloud-upload-alt"></i>
                Upload Artwork
            </button>
        </div>
    </div>
</section>
